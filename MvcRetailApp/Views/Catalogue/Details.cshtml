<script type="text/javascript">
    function confirmbox(message) {
        var sample = document.getElementById("audio");
        sample.src = '../../Audio/tone2.ogg';
        sample.load();
        sample.muted = false;
        sample.play();

        bootbox.classes('confirmClass');
        bootbox.confirm('<i class="fa fa-2x fa-question-circle"></i><br>' + message + '<hr>',
		 function (result) {
		     if (result) {
		         window.location.assign("/Catalogue/Create");
		     }
		 });
    }
</script>

<script type="text/javascript">
    $(function () {
        $("#exit").click(function () {
            confirmbox("Are you sure you want to Exit?")
        });
    });
</script>

<!-- Start: Header -->
@Html.Partial("../Shared/Header")
<!-- End: Header -->
<section>
    <div class="mainwrapper">
        <!-- Start: Main -->
        <div id="main">
            <!-- Start: Sidebar -->
            @Html.Partial("../Shared/LeftMenu")
            <!-- End: Sidebar -->
            <!-- Start: Content -->

            @Html.ValidationSummary(true)
            <input type="hidden" id="hdnRowCount" name="hdnRowCount" />

            <div class="mainpanel">
                <div class="col-md-12 col-lg-12">
                    <br />
                    <audio id="audio" muted="true" preload="auto" style="display: none" controls="controls" autoplay="false">
                        <source src="" type="audio/ogg" />
                    </audio>
                    <h2>Catalogue Details</h2>
                    <div class="col-md-12 col-lg-12">
                        <div class="table table-bordered">
                            <div style="height: 10px"></div>
                            <div class="row">
                                <div class="col-md-12 col-lg-12">
                                    @{
                                        if (Model.CatalogueDetails != null)
                                        {
                                        <div class="col-md-3 col-lg-3">
                                            <label>Category:&nbsp;</label>
                                            @Html.DisplayFor(model => model.CatalogueDetails.Category)
                                        </div>
                                        <div class="col-md-3 col-lg-3">
                                            <label>Sub Category:&nbsp;</label>
                                            @Html.DisplayFor(model => model.CatalogueDetails.Subcategory)
                                        </div>
                                        <div class="col-md-3 col-lg-3">
                                            <label>Item Name:&nbsp;</label>
                                            @Html.DisplayFor(model => model.CatalogueDetails.ItemName)
                                        </div>
                                        <div class="col-md-3 col-lg-3">
                                            <label>Supplier:&nbsp;</label>
                                            @Html.DisplayFor(model => model.CatalogueDetails.SupplierName)
                                        </div>
                                        }
                                        else
                                        {
                                        <div class="col-md-4 col-lg-4">
                                            <label>Category:&nbsp;</label>
                                            @Html.DisplayFor(model => model.NonInventoryItemDetails.itemCategory)
                                        </div>
                                        <div class="col-md-4 col-lg-4">
                                            <label>Sub Category:&nbsp;</label>
                                            @Html.DisplayFor(model => model.NonInventoryItemDetails.itemSubCategory)
                                        </div>
                                        <div class="col-md-4 col-lg-4">
                                            <label>Item Name:&nbsp;</label>
                                            @Html.DisplayFor(model => model.NonInventoryItemDetails.itemName)
                                        </div>
                                        }
                                    }
                                </div>
                            </div>
                            <div style="height: 10px"></div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <table class="table" border="1">
                                    <thead>
                                        <tr>
                                            <th style="text-align: center">Serial No</th>
                                            <th style="text-align: center">Item Code</th>
                                            <th style="text-align: center">Type</th>
                                            <th style="text-align: center">Item Description</th>
                                            <th style="text-align: center">Color Code</th>
                                            <th style="text-align: center">Size</th>
                                            <th style="text-align: center">Brand Name</th>
                                            <th style="text-align: center">Unit</th>
                                            <th style="text-align: center">Cost Price</th>
                                            <th style="text-align:center">Barcode</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int count = 1;
                                            // GET INVENTORY ITEMS FROM ITEM MASTERS
                                            foreach (var item in Model.CatalogueList)
                                            {
                                            <tr>
                                                @{
                                                double cost = Convert.ToDouble(@item.CostPrice);
                                                var costprice = cost.ToString("#,###.00##");
                                                double selling = Convert.ToDouble(@item.SellingPrice);
                                                var sellingprice = selling.ToString("#,###.00##");
                                                double mrp = Convert.ToDouble(@item.MRP);
                                                var MRP = mrp.ToString("#,###.00##");
                                                }
                                                <td style="text-align: left">@item.SerialNumber</td>
                                                <td style="text-align: left">@item.ItemCode</td>
                                                <td style="text-align: left">@item.ItemType</td>
                                                <td style="text-align: left">@item.Description</td>
                                                <td style="text-align: left">@item.Color</td>
                                                <td style="text-align: left">@item.Size</td>
                                                <td style="text-align: left">@item.Brand</td>
                                                <td style="text-align: left">@item.Unit</td>
                                                <td style="text-align: right">@costprice</td>
                                                <td style="text-align:center">@item.CatalogueBarcode.Replace(".png","")</td>
                                            </tr>
                                                count++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div style="text-align: right" class="col-lg-6 col-md-6">
                        <button type="button" class="btn btn-success" id="exit">Exit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
